{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "sourceMap": true,
        "incremental": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "$/*": ["./*"],
            "@/*": ["./src/*"]
        }
    },
    "exclude": ["node_modules", "dist"]
}
